<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Define default values for our SliderPreference, notably the layout -->
    <style name="Slions.Preference.SliderPreference" parent="Preference.SeekBarPreference.Material">
        <item name="android:layout">@layout/preference_slider</item>
        <item name="adjustable">true</item>
        <item name="showSeekBarValue">false</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">true</item>
        <item name="iconSpaceReserved">true</item>
    </style>


    <!-- Define default values for our SliderPreference, notably the layout -->
    <style name="Slions.Preference.SwitchPreference" parent="Preference.SwitchPreference.Material">
<!--        Use our own custom layout so that we can notably change the title text appearance-->
<!--        <item name="android:layout">@layout/preference_layout</item>-->
<!--        Use AOSP original layout - we could not change preference title styles using ?android:attr/textAppearanceListItem -->
<!--        <item name="android:layout" tools:ignore="PrivateResource">@layout/preference_material</item>-->
        <item name="android:widgetLayout">@layout/preference_switch</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">true</item>
        <item name="iconSpaceReserved">true</item>
    </style>

