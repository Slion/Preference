<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:a="http://schemas.android.com/apk/res-auto">

    <!-- =============== TITLE DRAWABLES =============== -->

    <x.PreferenceCategory
        a:title="Title Drawables"
        a:iconSpaceReserved="false">

        <x.Preference
            a:key="title_drawable_start"
            a:title="Drawable at Start"
            a:summary="Title has a drawable at the start (left in LTR)"
            a:titleDrawableStart="@drawable/ic_check_circle_outline"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_end"
            a:title="Drawable at End"
            a:summary="Title has a drawable at the end (right in LTR)"
            a:titleDrawableEnd="@drawable/ic_sliders_outline"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_start_end"
            a:title="Drawables at Both Ends"
            a:summary="Title has drawables at both start and end"
            a:titleDrawableStart="@drawable/ic_check_circle_outline"
            a:titleDrawableEnd="@drawable/ic_sliders_outline"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_top"
            a:title="Top Drawable"
            a:summary="Title has a drawable at the top"
            a:titleDrawableTop="@drawable/ic_check_circle_outline"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_bottom"
            a:title="Bottom Drawable"
            a:summary="Title has a drawable at the bottom"
            a:titleDrawableBottom="@drawable/ic_sliders_outline"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_all"
            a:title="All Drawables"
            a:summary="Title has drawables on all four sides"
            a:titleDrawableStart="@drawable/ic_check_circle_outline"
            a:titleDrawableTop="@drawable/messages"
            a:titleDrawableEnd="@drawable/ic_sliders_outline"
            a:titleDrawableBottom="@drawable/sync"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_multiline"
            a:title="Multi-line Title with Start Drawable that spans multiple lines to demonstrate how drawables work with longer titles"
            a:summary="Multi-line title with drawable at start"
            a:titleMaxLines="2"
            a:titleDrawableStart="@drawable/ic_check_circle_outline"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_no_summary"
            a:title="Title with Drawable, No Summary"
            a:titleDrawableStart="@drawable/ic_check_circle_outline"
            a:titleDrawableEnd="@drawable/ic_sliders_outline"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_ellipsize"
            a:title="Long Title with Drawable that will be truncated with ellipsis at the end when it's too long"
            a:summary="Single-line title with drawable and ellipsis"
            a:titleMaxLines="1"
            a:titleEllipsize="end"
            a:titleDrawableStart="@drawable/ic_short_text_outline"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_marquee"
            a:title="Long Scrolling Title with Drawable at Start using marquee effect to scroll continuously"
            a:summary="Title with marquee and drawable"
            a:titleMaxLines="1"
            a:titleEllipsize="marquee"
            a:titleMarqueeRepeatLimit="-1"
            a:titleDrawableStart="@drawable/ic_check_circle_outline"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_selectable"
            a:title="Selectable Title with Drawable"
            a:summary="Long press the title to select and copy text"
            a:titleMode="selectable"
            a:titleDrawableStart="@drawable/messages"
            a:titleDrawableEnd="@drawable/sync"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_with_icon"
            a:title="Title Drawable with Preference Icon"
            a:summary="Combines preference icon with title drawables"
            a:icon="@drawable/ic_sliders_outline"
            a:titleDrawableStart="@drawable/ic_check_circle_outline" />

        <x.Preference
            a:key="title_drawable_no_icon_space"
            a:title="Title Drawable, No Icon Space"
            a:summary="Title drawable without reserving icon space"
            a:iconSpaceReserved="false"
            a:titleDrawableStart="@drawable/ic_short_text_outline"
            a:titleDrawableEnd="@drawable/sync" />

        <x.Preference
            a:key="title_drawable_custom_padding_16dp"
            a:title="Custom Padding 16dp"
            a:summary="Title drawable with 16dp padding (default is 8dp)"
            a:titleDrawableStart="@drawable/ic_check_circle_outline"
            a:titleDrawableEnd="@drawable/ic_sliders_outline"
            a:titleDrawablePadding="16dp"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_custom_padding_4dp"
            a:title="Custom Padding 4dp"
            a:summary="Title drawable with reduced 4dp padding"
            a:titleDrawableStart="@drawable/ic_check_circle_outline"
            a:titleDrawableEnd="@drawable/ic_sliders_outline"
            a:titleDrawablePadding="4dp"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_drawable_no_padding"
            a:title="No Padding (0dp)"
            a:summary="Title drawable with no padding between drawable and text"
            a:titleDrawableStart="@drawable/ic_check_circle_outline"
            a:titleDrawableEnd="@drawable/ic_sliders_outline"
            a:titleDrawablePadding="0dp"
            a:iconSpaceReserved="false" />

    </x.PreferenceCategory>

</PreferenceScreen>

